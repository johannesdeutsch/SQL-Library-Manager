extends layout.pug

block content
    form(method='post' action='/books/new')
        p
            label(for='title') Title
            input#title(name='title' type='text' class='newbook')
        p
            label(for='author') Author
            input#author(name='author' type='text' class='newbook')
        p
            label(for='genre') Genre
            input#genre(name='genre' type='text' class='newbook')
        p
            label(for='year') Year
            input#year(name='year' type='text' class='newbook')
        p
            input(type='submit' value='Create New Book')
        p
            a.button(href='/') Cancel