extends layout.pug

block content
  form(method='post' action=`/books/${data.dataValues.id}`)
    p
      label(for= 'title') Title
      input#title(name='title' type='text' value=`${data.dataValues.title}`)
    p
      label(for= 'author') Author
      input#author(name= 'author' type='text' value=`${data.dataValues.author}`)
    p
      label(for= 'genre') Genre
      input#genre(name= 'genre' type='text' value=`${data.dataValues.genre}`)
    p
      label(for= 'year') Year
      input#year(name= 'year' type='text' value=`${data.dataValues.year}`)
    p
      input(type='submit' value='Update Book')
  form(method='post' action=`/books/${data.dataValues.id}/delete`)
    p
      a.button(href='/books') Cancel
    p
      input(type='submit' value='Delete Book')